@using TravelTripProje.Models.Siniflar
@model List<Comment>

@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YorumListesi</h2>


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.ID</th>
            <td>@x.UserName</td>
            <td>@x.Mail</td>
            <td>@x.CommentContent</td>
            <td>@x.Blog.Title</td>
            <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Admin/YorumGetir/@x.ID" class="btn btn-warning">GÜNCELLE</a></td>
        </tr>
    }
</table>

